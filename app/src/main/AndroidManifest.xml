<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zhe.scrogglegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutMe_Activity"
            android:label="@string/about">

        </activity>
        <activity android:name=".testdictionary_Activity">
            android:label="@strings/dictionary_title"
        </activity>
        <activity android:name=".Scoreboard_Activity">
            android:label="Scoreboard"
        </activity>
        <activity android:name=".Leaderboard_Activity">
            android:label="Leaderboard"
            <intent-filter>
                <action android:name="OPEN_ACTIVITY_1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Acknowledgement_Activity">

        </activity>
        <activity android:name=".MainActivity2"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="zhe.scrogglegame.GameActivity"
            android:launchMode="singleTask">
        </activity>
        <service android:name=".WordGameMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".WordGameInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

</manifest>
