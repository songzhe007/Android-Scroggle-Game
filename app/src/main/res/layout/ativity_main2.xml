<FrameLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:clipChildren="false"
   tools:context="zhe.scrogglegame.MainActivity2">

   <zhe.scrogglegame.ScrollingView
      android:id="@+id/main_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:scrollingDrawable="@drawable/xando_background"/>

   <ToggleButton
       android:id="@+id/button_toggle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:elevation="@dimen/elevation_low"
       android:textOn="Music On"
       android:textOff="Music Off"
       android:checked="true"
       android:textAllCaps="false"/>

   <fragment
      android:id="@+id/main_fragment"
      class="zhe.scrogglegame.MainFragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      tools:layout="@layout/fragment_main"/>


</FrameLayout>
